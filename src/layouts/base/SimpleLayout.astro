---
import '../../styles/font.css';

interface Props {
	title: string;
	clazz?: string;
}

const { title, clazz } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="trietng's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
    <body class={clazz}>
        <slot />
    </body>
</html>